- content_for :application do
  %header#header
    #header_actions
      = yield(:header_actions)

    = render partial: 'spina/admin/shared/breadcrumbs'

    %nav#secondary.tabs
      %ul
        %li{class: ('active' if controller_name == 'conferences')}
          = link_to t('spina.conferences.website.conferences'), admin_conferences_conferences_path
        %li{class: ('active' if controller_name == 'presentation_types')}
          = link_to t('spina.conferences.website.presentation_types'), admin_conferences_presentation_types_path

  = yield

= render template: 'layouts/spina/admin/admin'
