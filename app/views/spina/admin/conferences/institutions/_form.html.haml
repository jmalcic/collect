- if @institution.errors.any?
  - content_for :notifications do
    = render 'errors', errors: @institution.errors

= form_for @institution, remote: true, html: { autocomplete: 'off' } do |f|
  %header#header
    = render partial: 'spina/admin/shared/breadcrumbs'

    #header_actions
      %button.button.button-primary{ type: 'submit' }
        = icon('check')
        = t '.save'

      = link_to t('spina.cancel'), spina.admin_conferences_institutions_path, class: 'button', style: 'margin-right: 0'

    %nav#secondary.tabs
      %ul
        - @tabs.each_with_index do |tab, i|
          %li{ class: (i==0 ? 'active' : '') }
            = link_to t(".#{tab}"), "##{tab}"

  - @tabs.each do |tab|
    = render "spina/admin/conferences/institutions/form_#{tab}", f: f
