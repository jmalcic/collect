- content_for(:header_actions) do
  = link_to spina.new_admin_conferences_presentation_attachment_type_path, class: 'button button-primary', style: 'margin-right: 0' do
    = icon('plus')
    = t('spina.conferences.presentation_attachment_types.new')

.well
  .table-container
    %table.table
      %thead
        %tr
          %th= Spina::Conferences::DietaryRequirement.human_attribute_name :name
          %th

      %tbody
        - if @presentation_attachment_types.any?
          = render partial: 'spina/admin/conferences/shared/presentation_attachment_type', collection: @presentation_attachment_types

        - else
          %tr
            %td.align-center{ colspan: 100 }
              %em= t('spina.conferences.presentation_attachment_types.no_presentation_attachment_types')
