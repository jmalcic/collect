%li{ class: ('active' if %w[conferences delegates presentations].include? controller_name) }
  = link_to spina.admin_presentations_path do
    = icon('comment')
    = t("spina.#{plugin.name.downcase}.title")
    = icon('caret-right')

    %ul
      %li{ class: ('active' if current_admin_path.start_with?('/conferences')) }
        = link_to t("spina.#{plugin.name.downcase}.conferences"), spina.admin_conferences_path
      - if Spina::Conference.any? || Spina::Delegate.any? || Spina::DietaryRequirement.any?
        %li{ class: ('active' if current_admin_path.start_with?('/delegates') || current_admin_path.start_with?('/dietary_requirements')) }
          = link_to t("spina.#{plugin.name.downcase}.delegates"), spina.admin_delegates_path
      - if (Spina::Delegate.any? && Spina::Conference.any?) || Spina::Presentation.any? || Spina::PresentationType.any?
        %li{ class: ('active' if current_admin_path.start_with?('/presentations') || current_admin_path.start_with?('/presentation_types')) }
          = link_to t("spina.#{plugin.name.downcase}.presentations"), spina.admin_presentations_path

      %li
        = link_to '#', class: 'back-to-main-menu' do
          = icon('caret-left')
          =t 'spina.main_menu'
