%li{ class: ('active' if %w[conferences delegates presentations dietary_requirements presentation_types institutions rooms].include? controller_name) }
  = link_to spina.admin_collect_presentations_path do
    = icon('comment')
    = t("spina.#{plugin.name.downcase}.title")
    = icon('caret-right')

    %ul
      %li{ class: ('active' if %w[institutions rooms].include? controller_name) }
        = link_to t("spina.#{plugin.name.downcase}.website.institutions"), spina.admin_collect_institutions_path
      %li{ class: ('active' if %w[conferences presentation_types].include? controller_name) }
        = link_to t("spina.#{plugin.name.downcase}.website.conferences"), spina.admin_collect_conferences_path
      %li{ class: ('active' if %w[delegates dietary_requirements].include? controller_name) }
        = link_to t("spina.#{plugin.name.downcase}.website.delegates"), spina.admin_collect_delegates_path
      %li{ class: ('active' if %w[presentations].include? controller_name) }
        = link_to t("spina.#{plugin.name.downcase}.website.presentations"), spina.admin_collect_presentations_path

      %li
        = link_to '#', class: 'back-to-main-menu' do
          = icon('caret-left')
          =t 'spina.main_menu'
