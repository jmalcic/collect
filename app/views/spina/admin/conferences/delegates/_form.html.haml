- if @delegate.errors.any?
  - content_for :notifications do
    .notification.notification-danger.animated.fadeInRight
      = icon('exclamation')
      .notification-message
        = t 'spina.notifications.alert'
        %small
          - @delegate.errors.full_messages.each do |message|
            = message
            - unless @delegate.errors.full_messages[-1] == message
              %br
      = link_to '#', data: { close_notification: true } do
        = icon('cross')

= form_for [:admin_conferences, @delegate], html: { autocomplete: "off" } do |f|
  %header#header
    = render partial: 'spina/admin/shared/breadcrumbs'

    #header_actions
      %button.button.button-primary{ type: 'submit' }
        = icon('check')
        = t 'spina.conferences.delegates.save'

      = link_to t('spina.cancel'), spina.admin_conferences_delegates_path, class: 'button', style: 'margin-right: 0'

    %nav#secondary.tabs
      %ul
        - @tabs.each_with_index do |tab, i|
          %li{ class: (i==0 ? 'active' : '') }
            = link_to t("spina.conferences.delegates.#{tab}"), "##{tab}"

  - @tabs.each do |tab|
    = render "spina/admin/conferences/delegates/form_#{tab}", f: f