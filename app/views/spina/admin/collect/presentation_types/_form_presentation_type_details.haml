#presentation_type_details.tab-content.active
  .well
    .horizontal-form
      .horizontal-form-group
        .horizontal-form-label
          = Spina::Collect::PresentationType.human_attribute_name :conference
        .horizontal-form-content
          .select-dropdown
            = f.collection_select :conference_id, Spina::Collect::Conference.order(:dates).reverse_order, :id, :institution_and_year, required: true

      .horizontal-form-group
        .horizontal-form-label
          = Spina::Collect::PresentationType.human_attribute_name :name
        .horizontal-form-content
          = f.text_field :name, placeholder: Spina::Collect::PresentationType.human_attribute_name(:name), required: true

      .horizontal-form-group
        .horizontal-form-label
          = Spina::Collect::PresentationType.human_attribute_name :duration
          %small= Spina::Collect::PresentationType.human_attribute_name :duration_description
        .horizontal-form-content
          = f.number_field :minutes, value: @presentation_type.minutes, placeholder: Spina::Collect::PresentationType.human_attribute_name(:duration), required: true, step: 5, min: 5

      .horizontal-form-group
        .horizontal-form-label
          = Spina::Collect::PresentationType.human_attribute_name :rooms
          %small= (Spina::Collect::PresentationType.human_attribute_name :rooms_description).try(:html_safe)
        .horizontal-form-content
          - if @presentation_type.conference.blank?
            - if Spina::Collect::Room.any?
              .multiple.select-dropdown
                = f.collection_select :room_ids, Spina::Collect::Room.all, :id, :building_and_number, { }, multiple: true, required: true
            - else
              = f.text_field :room_ids, placeholder: Spina::Collect::PresentationType.human_attribute_name(:rooms), required: true
          - else
            .multiple.select-dropdown
              = f.collection_select :room_ids, @presentation_type.conference.rooms, :id, :building_and_number, { }, multiple: true, required: true

  - unless @presentation_type.new_record?
    .pull-right= link_to t('spina.permanently_delete'), admin_collect_presentation_type_path(@presentation_type), method: :delete, data: { confirm: t('spina.collect.presentation_types.delete_confirmation', presentation_type: @presentation_type.name) }, class: 'button button-link button-danger'
