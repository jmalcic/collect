#room_details.tab-content.active
  .well
    .horizontal-form
      .horizontal-form-group
        .horizontal-form-label
          = Spina::Collect::Room.human_attribute_name :institution
        .horizontal-form-content
          .select-dropdown
            = f.collection_select :institution_id, Spina::Collect::Institution.all, :id, :name, { required: true }

      .horizontal-form-group
        .horizontal-form-label
          = Spina::Collect::Room.human_attribute_name :building
        .horizontal-form-content
          = f.text_field :building, placeholder: Spina::Collect::Room.human_attribute_name(:building), required: true

      .horizontal-form-group
        .horizontal-form-label
          = Spina::Collect::Room.human_attribute_name :number
        .horizontal-form-content
          = f.text_field :number, placeholder: Spina::Collect::Room.human_attribute_name(:number), required: true

  - unless @room.new_record?
    .pull-right= link_to t('spina.permanently_delete'), admin_collect_room_path(@room), method: :delete, data: { confirm: t('spina.collect.rooms.delete_confirmation', room: "#{@room.name}") }, class: 'button button-link button-danger'
