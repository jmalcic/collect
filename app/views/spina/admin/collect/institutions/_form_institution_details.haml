#institution_details.tab-content.active
  .well
    .horizontal-form
      .horizontal-form-group
        .horizontal-form-label
          = Spina::Collect::Institution.human_attribute_name :name
        .horizontal-form-content
          = f.text_field :name, placeholder: Spina::Collect::Institution.human_attribute_name(:name), required: true

      .horizontal-form-group
        .horizontal-form-label
          = Spina::Collect::Institution.human_attribute_name :city
        .horizontal-form-content
          = f.text_field :city, placeholder: Spina::Collect::Institution.human_attribute_name(:city), required: true

  - unless @institution.new_record?
    .pull-right= link_to t('spina.permanently_delete'), admin_collect_institution_path(@institution), method: :delete, data: { confirm: t('spina.collect.institutions.delete_confirmation', institution: "#{@institution.name}") }, class: 'button button-link button-danger'
