- content_for(:header_actions) do
  = link_to spina.new_admin_conferences_dietary_requirement_path, class: 'button button-primary', style: 'margin-right: 0' do
    = icon('plus')
    = t('spina.conferences.dietary_requirements.new')

.well
  .table-container
    %table.table
      %thead
        %tr
          %th= Spina::Conferences::DietaryRequirement.human_attribute_name :name
          %th

      %tbody
        - if @dietary_requirements.any?
          = render partial: 'spina/admin/conferences/shared/dietary_requirement', collection: @dietary_requirements

        - else
          %tr
            %td.align-center{ colspan: 100 }
              %em= t('spina.conferences.dietary_requirements.no_dietary_requirements')
