- content_for(:header_actions) do
  = link_to spina.new_admin_collect_institution_path, class: 'button button-primary', style: 'margin-right: 0' do
    = icon('plus')
    = t('spina.collect.institutions.new')

.well
  .table-container
    %table.table
      %thead
        %tr
          %th= Spina::Collect::Institution.human_attribute_name :name
          %th= Spina::Collect::Institution.human_attribute_name :city
          %th

      %tbody
        - if @institutions.any?
          - @institutions.each do |institution|
            %tr
              %td= link_to institution.name, spina.edit_admin_collect_institution_path(institution)
              %td= institution.city
              %td.align-right
                = link_to spina.edit_admin_collect_institution_path(institution), class: 'button button-small button-link' do
                  = icon('pencil-outline')
                  = t('spina.edit')

        - else
          %tr
            %td.align-center{ colspan: 100 }
              %em= t('spina.collect.institutions.no_institutions')
