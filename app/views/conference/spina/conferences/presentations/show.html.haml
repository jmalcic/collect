- content_for :header do
  .my-4
    %h1.mb-1= @presentation.title
    .text-gray
      - @presentation.presenters.includes(:institution).each do |presenter|
        %address= "#{presenter.full_name}, #{presenter.institution.name}"
      = time_tag @presentation.start_datetime, l(@presentation.start_datetime, format: :short)
      %div= @presentation.room_use.room_name
    - if @presentation.has_content?(:slides) || @presentation.has_content?(:handout) || @presentation.has_content?(:poster)
      .BtnGroup.mt-1
        = render @presentation.raw_part(:slides)
        = render @presentation.raw_part(:handout)
        = render @presentation.raw_part(:poster)
    = link_to spina.conferences_presentation_url(@presentation, format: :ics), class: %w[btn mt-1], role: :button do
      = octicon 'calendar'
      Download event


- content_for :content do
  .markdown-body.my-4= @presentation.abstract.html_safe
