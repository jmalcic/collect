document.querySelector('[data-controller=\'conference-events-form\'] .structure-form-menu ul')
  .insertAdjacentHTML(
    'beforeend',
    '<%=
      j render(partial: 'spina/admin/conferences/conferences/event_row', object: @event, as: :event,
               locals: { index: index, active: active })
    %>'
  );
document.querySelector('[data-controller=\'conference-events-form\'] .structure-form-content')
  .insertAdjacentHTML(
    'beforeend',
    '<%=
      fields_for @conference do |f|
        f.fields_for :events, @event, child_index: index do |ff|
          j render('spina/admin/conferences/conferences/event_fields', f: ff, active: active)
        end
      end
    %>'
  );
document.querySelector('[data-controller=\'conference-events-form\'] .structure-form-content')
  .dispatchEvent(new Event('conferenceEventFieldsAdded'))
Array.from(document.getElementsByClassName('conference-datepicker')).forEach(element => {
  $(element).datepicker({
    dateFormat: 'yy-mm-dd',
    firstDay: 1
  })
})
