- if @institution.errors.any?
  - content_for :notifications do
    .notification.notification-danger.animated.fadeInRight
      = icon('exclamation')
      .notification-message
        = t 'spina.notifications.alert'
        %small
        - @institution.errors.full_messages.each do |message|
          = message
          - unless @institution.errors.full_messages[-1] == message
            %br
      = link_to '#', data: { close_notification: true } do
        = icon('cross')

= form_for @institution, html: { autocomplete: "off" } do |f|
  %header#header
    = render partial: 'spina/admin/shared/breadcrumbs'

    #header_actions
      %button.button.button-primary{ type: 'submit' }
        = icon('check')
        = t 'spina.conferences.institutions.save'

      = link_to t('spina.cancel'), spina.admin_conferences_institutions_path, class: 'button', style: 'margin-right: 0'

    %nav#secondary.tabs
      %ul
        - @tabs.each_with_index do |tab, i|
          %li{ class: (i==0 ? 'active' : '') }
            = link_to t("spina.conferences.institutions.#{tab}"), "##{tab}"

  - @tabs.each do |tab|
    = render "spina/admin/conferences/institutions/form_#{tab}", f: f
