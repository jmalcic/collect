- content_for(:header_actions) do
  = link_to spina.new_admin_conferences_presentation_type_path, class: 'button button-primary', style: 'margin-right: 0' do
    = icon('plus')
    = t('spina.conferences.presentation_types.new')

.well
  .table-container
    %table.table
      %thead
        %tr
          %th= Spina::Admin::Conferences::PresentationType.human_attribute_name :conference
          %th= Spina::Admin::Conferences::PresentationType.human_attribute_name :name
          %th= Spina::Admin::Conferences::PresentationType.human_attribute_name :duration
          %th

      %tbody
        - if @presentation_types.any?
          = render @presentation_types

        - else
          %tr
            %td.align-center{ colspan: 100 }
              %em= t('spina.conferences.presentation_types.no_presentation_types')
