- content_for :application do
  %header#header
    #header_actions
      = yield(:header_actions)

    = render partial: 'spina/admin/shared/breadcrumbs'

    %nav#secondary.tabs
      %ul
        %li{class: ('active' if controller_name == 'institutions')}
          = link_to t('spina.conferences.website.institutions'), admin_conferences_institutions_path
        %li{class: ('active' if controller_name == 'rooms')}
          = link_to t('spina.conferences.website.rooms'), admin_conferences_rooms_path

  = yield

= render template: 'layouts/spina/admin/admin'
